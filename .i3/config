client.focused          #2f343f             #2f343f            #f3f4f5              #647cc6
client.unfocused        #2f343f  	    #2f343f 	       #676E7D 		    #647cc6
client.focused_inactive #2f343f  	    #2f343f	       #676E7D 		    #647cc6
client.urgent           #E53935    	    #E53935   	       #f3f4f5              #647cc6

